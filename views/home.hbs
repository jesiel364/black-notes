{{>_novanota}}


<!-- Card note -->
<div id="card-note" class="row row-cols-1 row-cols-md-3 g-4 mt-4 shadow-lg rounded">
  {{#each notes}}
  <div class="col">
    <div class="card bg-dark h-100">
      
      <img src="{{img_link}}" class="card-img-top" alt="..."/>
      <div class="card-body">
        <h5 style="color: white;" class="card-title">{{title}}</h5>
        <p style="color: white;" class="card-text">
          {{note}}
        </p>
      </div>



   
      <div class='btn-group '

        <!-- Botão Excluir Nota -->
        <form method="POST" action="/deletar" class="mb-2 mx-auto">
          <input type="hidden" name="id" value='{{_id}}'>
           <button type="submit" class="btn btn-dark btn-floating mt-2 " value="" name=""><i class="fas fa-trash"></i></button>
        </form>

        <!-- Botão Compartilhar Nota -->
        <form method="POST" action="/share" class="mb-2 mx-auto">
          <input type="hidden" name="id" value='{{_id}}'>
           <button type="submit" class="btn btn-dark btn-floating mt-2 " value="" name=""><i class="fas fa-share"></i></button>
        </form>
      {{>_dropdownmenu}}
      </div>


  </div>
    </div>

  
  {{else}}
  {{/each}}


           

           