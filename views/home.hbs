{{>_novanota}}


<!-- Card note -->
<div id="card-note" class="row row-cols-1 row-cols-md-3 g-4 mt-4 shadow-lg rounded">
  {{#each notes}}
  <div class="col">
    <div class="card bg-dark ">
      
      <img id="capa" src="{{img_link}}" class="card-img-top" alt="..."/>
      <div class="card-body">
        <h4 id="note-title" style="color: white;" class="card-title">{{title}}</h4>
        <p id="description" style="color: white;" class="card-text">
          {{note}}
        </p>
      </div>



    <!-- Buttons Group -->
      <div class='d-inline-flex'>

        <!-- Botão Compartilhar Nota -->
        <form method="POST" action="/share" class="mx-auto ">
          <input type="hidden" name="id" value='{{_id}}'>
           <button type="submit" class="btn btn-dark btn-floating mt-2 " value="" name=""><i class="fas fa-share"></i></button>
        </form>

        <!-- Botão Excluir Nota -->
        <form method="POST" action="/deletar" class=" mx-auto">
          <input type="hidden" name="id" value='{{_id}}'>
           <button type="submit" class="btn btn-dark btn-floating mt-2 " value="" name=""><i class="fas fa-trash"></i></button>
        </form>

      {{>_dropdownmenu}}
      </div>


  </div>
    </div>

  {{else}}
  {{/each}}

</div>


           

           